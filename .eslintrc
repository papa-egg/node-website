{
  "extends": "eslint-config-egg",
  "parser": "babel-eslint",
  "rules": {
    // see https://github.com/eslint/eslint/issues/6274
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 0,
    "linebreak-style": 0,
    "indent": [2, 2],
    "no-new": 0,
    "promise/param-names": 0,
    "valid-typeof": 0,
    "comma-dangle": [0, "never"],
    "semi": [0, "always"],
    "eqeqeq": 0,
    "no-trailing-spaces": 0,
    "spaced-comment": 0,
    "padded-blocks": 0
  }
}
